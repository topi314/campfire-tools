{{ template "head" "Admin" }}
<div class="container">
    <div class="container-header">
        <a href="/" class="back">
            <img src="/static/back.svg" alt="Back">
        </a>
        <h1>Admin</h1>
    </div>

    <div class="section">
        <div class="section-header">
            <h2>Tokens</h2>
        </div>
        <div class="table-4">
            <div>ID</div>
            <div>Expires At</div>
            <div>Email</div>
            <div>Token</div>

            {{ range $token := .Tokens }}
                <span>{{ $token.ID }}</span>
                <span class="no-wrap">{{ formatTimeToRelDayTime $token.ExpiresAt }}</span>
                <span class="no-wrap">{{ $token.Email }}</span>
                <span class="wrap">{{ $token.Token }}</span>
            {{ end }}
        </div>
        <br/>
        <form method="POST" action="/admin/tokens">
            <label>
                Token
                <input type="text" name="token" placeholder="ey...">
            </label>
            {{ if .Errors }}
                <p id="error-message" class="error">
                    {{ range $error := .Errors }}
                        {{ $error }}
                        <br/>
                    {{ end }}
                </p>
            {{ end }}
            <button type="submit">Add</button>
        </form>
    </div>

</div>
{{ template "footer" }}
